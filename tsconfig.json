{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "dom",
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "outDir": "./distSrc",
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
  ]
}
